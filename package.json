    "husky": "^5.0.9",
    "jest": "~26.6.3",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "ts-jest": "^26.5.1",
    "typescript": "~4.1.5"
  },
  "scripts": {
    "build-cjs": "tsc -p ./tsconfig.publish.json",
